{
    "src": {
        "root": "./src/",
        "all": "./src/*",
        "views": {
            "root": "./src/pages/*.html",
            "all": "./src/pages/components/*"
        },
        "css": {
            "root": "./src/scss/style.scss",
            "all": "./src/scss/**/*.scss"
        },
        "js": {
            "lib": {
                "all": "./src/lib/*.js"
            },
            "all": "./src/js/*.js"
        },
        "img": {
            "all": "./src/img/*"
        },
        "fonts": {
            "all": "./src/fonts/*"
        },
        "scorm": {
            "all": "./src/scorm/*"
        }
    },
    "dest": {
        "root": "./dist/",
        "all": "./dist/*",
        "css": {
            "root": "./dist/css/",
            "all": "./dist/css/*"
        },
        "js": {
            "root": "./dist/js/",
            "all": "./dist/js/*"
        },
        "img": {
            "root": "./dist/img/",
            "all": "./dist/img/*"
        },
        "fonts": {
            "root": "./dist/fonts/",
            "all": "./dist/fonts/*"
        }
    },
    "default": {
        "root": "./zip/"
    }
}